{
  "name": "schedule-my-tasks",
  "version": "0.1.0",
  "private": false,
  "homepage": "https://schedulemytasks.firebaseapp.com/",
  "dependencies": {
    "@date-io/date-fns": "2.10.8",
    "@devexpress/dx-react-core": "2.7.5",
    "@devexpress/dx-react-scheduler": "2.7.5",
    "@devexpress/dx-react-scheduler-material-ui": "2.7.5",
    "@material-ui/core": "4.11.3",
    "@material-ui/icons": "4.11.2",
    "@material-ui/pickers": "4.0.0-alpha.12",
    "date-fns": "2.19.0",
    "firebase": "7.24.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-firebase-hooks": "3.0.3",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "typescript": "4.1.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.json 'src/**/*.tsx'",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.tsx' --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "7.30.1",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.5",
    "@testing-library/user-event": "13.0.16",
    "@types/jest": "26.0.21",
    "@types/node": "12.20.6",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "prettier": "2.1.2",
    "react-dnd": "13.1.1",
    "react-dnd-html5-backend": "12.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/serviceWorker.ts"
    ]
  }
}
